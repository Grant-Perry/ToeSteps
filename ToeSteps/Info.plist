	<string>ToeSteps may update your Health data with step information to keep your records synchronized and accurate.</string>
	<!-- ADD: App category for better App Store placement -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.healthcare-fitness</string>
	<!-- FIX: Proper font declarations -->
	<key>UIAppFonts</key>
