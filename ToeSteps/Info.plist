<dict>
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
	<!-- REMOVE: Unnecessary permissions that will get you rejected -->
	<!-- Apple will reject apps that request permissions they don't use -->
	<!-- FIX: Enhanced HealthKit descriptions (Apple loves detailed explanations) -->
